{
	"name": "@wolfie/core",
	"version": "2.0.0",
	"description": "Framework-agnostic TUI core library",
	"license": "MIT",
	"type": "module",
	"napi": {
		"binaryName": "wolfie-core",
		"targets": [
			"x86_64-unknown-linux-gnu",
			"aarch64-unknown-linux-gnu",
			"x86_64-apple-darwin",
			"aarch64-apple-darwin",
			"x86_64-pc-windows-msvc"
		]
	},
	"exports": {
		".": {
			"types": "./build/index.d.ts",
			"default": "./build/index.js"
		},
		"./layout": {
			"types": "./layout.d.ts",
			"default": "./layout.js"
		}
	},
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "vite build --watch",
		"build": "vite build",
		"build:rust": "napi build --platform --release",
		"build:full": "napi build --platform --release && vite build"
	},
	"files": [
		"build",
		"*.node",
		"*.cjs",
		"layout.js",
		"layout.d.ts",
		"index.d.ts"
	],
	"dependencies": {
		"@alcalzone/ansi-tokenize": "^0.2.1",
		"ansi-escapes": "^7.2.0",
		"ansi-styles": "^6.2.1",
		"auto-bind": "^5.0.1",
		"chalk": "^5.6.0",
		"cli-boxes": "^3.0.0",
		"cli-cursor": "^4.0.0",
		"cli-truncate": "^5.1.1",
		"code-excerpt": "^4.0.0",
		"es-toolkit": "^1.39.10",
		"indent-string": "^5.0.0",
		"is-in-ci": "^2.0.0",
		"patch-console": "^2.0.0",
		"signal-exit": "^3.0.7",
		"slice-ansi": "^7.1.0",
		"stack-utils": "^2.0.6",
		"string-width": "^8.1.0",
		"type-fest": "^4.27.0",
		"widest-line": "^5.0.0",
		"wrap-ansi": "^9.0.0",
		"ws": "^8.18.0",
		"yoga-layout": "~3.2.1"
	},
	"devDependencies": {
		"@napi-rs/cli": "^3.0.0-alpha"
	}
}
