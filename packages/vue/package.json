{
	"name": "@wolfie/vue",
	"version": "0.1.0",
	"description": "Vue 3 adapter for Wolfie",
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./build/index.d.ts",
			"default": "./build/index.js"
		},
		"./global": {
			"types": "./global.d.ts"
		},
		"./styles": {
			"types": "./build/styles/index.d.ts",
			"default": "./build/styles/index.js"
		}
	},
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "vite build --watch",
		"build": "vite build",
		"prepare": "npm run build",
		"test": "vitest run",
		"test:watch": "vitest",
		"example": "pnpm --filter @examples/vue-vite example"
	},
	"files": [
		"build",
		"global.d.ts"
	],
	"dependencies": {
		"@wolfie/core": "workspace:*",
		"ansi-escapes": "^7.2.0",
		"ansi-styles": "^6.2.1",
		"auto-bind": "^5.0.1",
		"cli-boxes": "^3.0.0",
		"cli-cursor": "^4.0.0",
		"cli-truncate": "^5.1.1",
		"code-excerpt": "^4.0.0",
		"es-toolkit": "^1.39.10",
		"indent-string": "^5.0.0",
		"is-in-ci": "^2.0.0",
		"patch-console": "^2.0.0",
		"signal-exit": "^3.0.7",
		"stack-utils": "^2.0.6",
		"type-fest": "^4.27.0",
		"wrap-ansi": "^9.0.0"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^5.2.1",
		"@vitejs/plugin-vue-jsx": "^4.1.1",
		"@wolfie/css-parser": "workspace:*",
		"@wolfie/plugin": "workspace:*",
		"memfs": "^4.56.10",
		"ts-loader": "^9.5.4",
		"vue": "^3.5.0"
	},
	"peerDependencies": {
		"chalk": "^5.0.0",
		"vue": "^3.5.0"
	}
}
