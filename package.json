		"@types/ms": "^2.1.0",
		"@types/node": "^24.10.0",
		"@types/react": "^19.2.8",
		"@types/react-reconciler": "^0.32.2",
		"@types/signal-exit": "^3.0.0",
		"@types/sinon": "^17.0.3",
		"@types/stack-utils": "^2.0.2",
		"@types/ws": "^8.18.1",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitejs/plugin-vue": "^5.2.4",
		"@vitejs/plugin-vue-jsx": "^4.2.0",
		"@wolfie/angular": "workspace:*",
		"@wolfie/core": "workspace:*",
		"@wolfie/css-parser": "workspace:*",
		"@wolfie/react": "workspace:*",
		"@wolfie/solid": "workspace:*",
		"@wolfie/vue": "workspace:*",
		"ansi-to-html": "^0.7.2",
		"babel-plugin-react-compiler": "^1.0.0",
		"boxen": "^8.0.1",
		"chalk": "^5.6.0",
		"cross-env": "^10.1.0",
