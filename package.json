{
	"name": "wolfie-monorepo",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm -r --parallel dev",
		"dev:log": "cross-env WOLFIE_LOG=1 pnpm -r --parallel dev",
		"dev:log:react": "cross-env WOLFIE_LOG=1 pnpm --filter @wolfie/react-game-invaders dev",
		"dev:log:vue": "cross-env WOLFIE_LOG=1 pnpm --filter @wolfie/vue-game-invaders dev",
		"dev:log:angular": "cross-env WOLFIE_LOG=1 pnpm --filter @wolfie/angular-game-invaders dev",
		"build": "pnpm -r build",
		"test": "pnpm -r test",
		"test:related": "vitest related --run",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"benchmark": "npx vite-node",
		"test:e2e": "vitest run --config e2e/vitest.config.ts",
		"typecheck": "tsc --build --noEmit",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=9"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@faker-js/faker": "^9.8.0",
		"@sinonjs/fake-timers": "^14.0.0",
