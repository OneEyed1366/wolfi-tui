		"delay": "^7.0.0",
		"esbuild": "^0.24.2",
		"eslint": "^9.18.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"ms": "^2.1.3",
		"node-loader": "^2.1.0",
		"node-pty": "^1.0.0",
		"null-loader": "^4.0.1",
		"p-queue": "^9.0.0",
		"playwright": "^1.58.2",
