{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"plugins": [
			{
				"name": "@wolfie/typescript-plugin"
			}
		]
	},
	"include": ["src/**/*"]
}
